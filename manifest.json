{
  "name": "Text Formatter",
  "description": "Text Splitting and Formatting Web Extension and Browser Addon.",
  "homepage_url": "https://github.com/cssnr/text-formatter",
  "author": "Shane",
  "version": "0.1.6",
  "manifest_version": 3,
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Show Main Popup Action"
    },
    "open_page": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Open Split Text Page"
    }
  },
  "permissions": ["clipboardRead", "clipboardWrite", "contextMenus", "storage"],
  "background": {
    "type": "module"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Text Formatter",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "96": "images/logo96.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "96": "images/logo96.png",
    "128": "images/logo128.png"
  }
}
